<!--  It should be a Point -->
<bean id="zeroPoint" class="org.spring.javabrains.Triangle">
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>
<bean id="point2" class="org.spring.javabrains.Triangle">
<property name="x" value="-20"/>
<property name="y" value="0"/>
</bean>
<bean id="point3" class="org.spring.javabrains.Triangle">
<property name="x" value="0"/>
<property name="y" value="20"/>
</bean>
</beans>